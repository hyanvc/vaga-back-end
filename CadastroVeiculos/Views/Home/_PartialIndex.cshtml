@model List<UsuarioModel>
<style>
    .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .form-row label {
            width: 150px;
            margin-right: 10px;
            text-align: right;
        }

        .form-row input[type="text"],
        .form-row input[type="date"] {
            flex: 1;
        }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Marca Carro:</th>
            <th>Placa Carro:</th>
            <th>Dono do Carro:</th>
            <th>Data de Cadastro:</th>
            <th>Ações:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MarcadoCarro</td>
                <td>@item.PlacaDoCarro</td>
                <td>@item.Proprietario</td>
                <td>@item.DatadeCadastro</td>
                <td>
                    <button type="button" class="btn-secondary" data-toggle="modal" data-target="#MODALEditar">
                        Editar
                    </button>
                    <button class="btn-secondary">Excluir</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button data-toggle="modal" data-target="#MODALCadastrar">Cadastrar</button>
@*<a href="@Url.Action("Cadastrar", "Carro")" class="btn btn-primary">Cadastrar</a>
*@
<div class="modal fade" id="MODALEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar:</h5>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <label for="MarcaCarro">Marca do Carro:</label>
                    <input id="marcacarro" type="text" />
                </div>

                <div class="form-row">
                    <label for="donocarro">Dono do Carro:</label>
                    <input id="donocarro" type="text" />
                </div>

                <div class="form-row">
                    <label for="placacarro">Placa do Carro:</label>
                    <input id="placacarro" type="text" />
                </div>

                <div class="form-row">
                    <label for="datacadastro">Data de Cadastro:</label>
                    <input id="datacadastro" type="date" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="btnEditar" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="MODALCadastrar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Cadastrar:</h5>
            </div>
            <div class="modal-body">
                <div>
                    <label for="MarcaCarro">Marca do Carro:</label>
                    <input id="marcacarro" type="text" />


                    <label for="donocarro">Dono do Carro:</label>
                    <input id="donocarro" type="text" />


                    <label for="placacarro">Placa do Carro:</label>
                    <input id="placacarro" type="text" />


                    <label for="datacadastro">Data de Cadastro:</label>
                    <input id="datacadastro" type="date" />

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="btnCadastrar" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


<script>

    //VAL() = INPUT,  TEXT() = CASO NAO SEJA INPUT.
    $('#btnEditar').click(function () {
        var marcacarro = $('#marcacarro').val();
        var placacarro = $('#placacarro').val();
        var donocarro = $('#donocarro').val();
        var datacadastro = $('#datacadastro').val();
        $.ajax({
            url: "/Home/Editar",
            type: "GET",
            data: { MarcaCarro: marcacarro, PlacaCarro: placacarro, DonoCarro: donocarro, DataDeCadastro: datacadastro },
            success: function (data) {
                alert("Editado com Sucesso!");
                location.reload();

            }
        });
    });

    $('#btnCadastrar').click(function () {
        var marcacarro = $('#marcacarro').val();
        var placacarro = $('#placacarro').val();
        var donocarro = $('#donocarro').val();
        var datacadastro = $('#datacadastro').val();
        $.ajax({
            url: "/Home/Cadastrar",
            type: "POST",
            data: { MarcaCarro: marcacarro, PlacaCarro: placacarro, DonoCarro: donocarro, DataDeCadastro: datacadastro },
            success: function (data) {
                alert("Editado com Sucesso!");
                location.reload();
            }
        });
    });
</script>